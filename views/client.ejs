<!DOCTYPE html>
<html lang="en">

<head>
    <meta name="viewport" content="width=device-width">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Client</title>
    <style>
        body {
            background-color: black;
        }

        button {
            width: 40%;
            height: 150px;
            font-size: 30px;
            border-radius: 20%;
            background-color: rgb(0, 253, 106);
        }
    </style>
</head>

<body>
    <div>
        <button ontouchStart="sendToServer('UP')">Up</button>
    </div>
    <div>
        <button ontouchStart="sendToServer('DOWN')">Down</button>
    </div>
    <button ontouchStart="sendToServer('LEFT')">Left</button>
    <button ontouchStart="sendToServer('RIGHT')">Right</button>
</body>
<script src="/socket.io/socket.io.js"></script>
<script>
    let socket = io();

    function sendToServer(direction) {
        socket.emit('direction', direction);
        console.log(direction);
    }

    // socket.on('connect', function (data) {
